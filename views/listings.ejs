<!DOCTYPE html>
<html>
<head>
  <title>Listings</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="main-layout">
  <%- include('header') %>

  <main class="content-area">
    <h1 class="page-title">My Listings</h1>

    <% if (personData && personData.listings.length > 0) { %>
      <ul class="listing-list">
        <% personData.listings.forEach((listing, index) => { %>
          <li class="listing-item">

            <span id="text-<%= index %>"><%= listing %></span>

            <input
              type="text"
              id="input-<%= index %>"
              value="<%= listing %>"
              style="display:none"
            />

            <button onclick="enableEdit(<%= index %>)">âœï¸ Edit</button>
            <button onclick="saveEdit(<%= index %>)">ğŸ’¾ Save</button>
            <button onclick="deleteListing(<%= index %>)">ğŸ—‘ Delete</button>

          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>Select a profile to view listings</p>
    <% } %>

  </main>
</div>

<script src="/script.js"></script>
</body>
</html>
